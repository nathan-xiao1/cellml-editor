{
  "compilerOptions": {
    "lib": ["es2020.string"],
    "downlevelIteration": true,
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "target": "es5",
    "paths": {
      "*": ["node_modules/*"],
      "Types": ["src/types/index.d.ts"],
      "IPCChannels": ["src/main/handlers/IpcChannels.ts"],
      "src/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
